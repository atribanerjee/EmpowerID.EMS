@page "{id}"
@model EmpowerID.EMS.Web.Pages.Employee.EditModel
@{
}
<h4>Edit Employee</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" id="EmployeeID" asp-for="EmployeeID" />
            <div class="form-group">
                <label class="control-label">Select Department *</label>
                <select id="DepartmentID" class="form-control" asp-items="Model.Departments" asp-for="DepartmentID"></select>
                @Html.ValidationMessageFor(m=>m.DepartmentID,"",new{@class="text-danger"})
            </div>
            <div class="form-group">
                <label class="control-label">First Name *</label>
                <input id="txtFirstName" asp-for="FirstName" type="text" class="form-control" maxlength="80"/>
                @Html.ValidationMessageFor(m=>m.FirstName,"",new{@class="text-danger"})
            </div>
            <div class="form-group">
                <label class="control-label">Last Name *</label>
                <input id="txtLastName" asp-for="LastName" type="text" class="form-control" maxlength="80" />
                @Html.ValidationMessageFor(m=>m.LastName,"",new{@class="text-danger"})
            </div>
            <div class="form-group">
                <label class="control-label">E-mail Address *</label>
                <input id="txtEmail" asp-for="Email" type="email" class="form-control" maxlength="80"/>
                @Html.ValidationMessageFor(m=>m.Email,"",new{@class="text-danger"})
            </div>
            <div class="form-group">
                <label class="control-label">Phone Number *</label>
                <input id="txtPhone" asp-for="Phone" type="number" class="form-control" maxlength="15"/>
                @Html.ValidationMessageFor(m=>m.Phone,"",new{@class="text-danger"})
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="SaveEmployee"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}